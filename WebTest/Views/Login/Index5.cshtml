@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterContent.cshtml";
}

<title>管理平台</title>
<style type="text/css">
body {
	margin-left: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 0px;
	overflow:hidden;
}
.STYLE3 {color: #528311; font-size: 12px; }
.STYLE4 {
	color: #42870a;
	font-size: 12px;
}

</style>
@section scripts{

<script type="text/javascript">


    $(function () {
        $(document).keypress(function (e) {
            if (e.keyCode == 13) {
                Login();
            }
        });
        
    });
    function Login() {
        var uid = $("#uid").val();
        var pwd = $("#pwd").val();
        $.post("/Login/LoginInfo", { UId: uid, Pwd: pwd }, function (date) {
            if (date == "1") 
            {
                window.location.href = "/Home/Index";
            }
            else if (date == "-1")
            {
                alert("用户名不能为空！");
            }
            else if (date == "0")
            {
                alert("密码不能为空！");
            }
            else 
            {
                alert("用户名或密码错误！");
            }
        });
    }

    function Reset() {
        $("#uid").val("");
        $("#pwd").val("");
    }
</script>
    }
</head>

<body>
<table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td bgcolor="#e5f6cf">&nbsp;</td>
  </tr>
  <tr>
    <td height="608" background="@Url.Content("~/Content/images/login_03.gif")"><table width="862" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td height="266" background="@Url.Content("~/Content/images/login_04.gif")">&nbsp;</td>
      </tr>
      <tr>
        <td height="95"><table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="424" height="95" background="@Url.Content("~/Content/images/login_06.gif")">&nbsp;</td>
            <td width="183" background="@Url.Content("~/Content/images/login_07.gif")"><table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="25%" height="30"><div align="center"><span class="STYLE3">用户名:</span></div></td>
                <td width="75%" height="30"><input id="uid" type="text" name="textfield"  style="height:18px; width:130px; border:solid 1px #cadcb2; font-size:12px; color:#81b432;"></td>
              </tr>
              <tr>
                <td width="25%" height="30"><div align="center"><span class="STYLE3">密 码:</span></div></td>
                <td width="75%" height="30"><input id="pwd" type="password" name="textfield2"  style="height:18px; width:130px; border:solid 1px #cadcb2; font-size:12px; color:#81b432;"></td>
              </tr>
              <tr>
                <td height="30">&nbsp;</td>
                <td height="30"><input type="image" src="@Url.Content("~/Content/images/dl.gif")" width="81" height="22" border="0" usemap="#Map" onclick="Login()" /></td>
              </tr>
            </table></td>
            <td width="255" background="@Url.Content("~/Content/images/login_08.gif")">&nbsp;</td>
          </tr>
        </table></td>
      </tr>
      <tr>
        <td height="247" valign="top" background="@Url.Content("~/Content/images/login_09.gif")"><table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="22%" height="30">&nbsp;</td>
            <td width="56%">&nbsp;</td>
            <td width="22%">&nbsp;</td>
          </tr>
          <tr>
            <td>&nbsp;</td>
            <td height="30"><table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="44%" height="20">&nbsp;</td>
                <td width="56%" class="STYLE4">版本 2018V1.0 </td>
              </tr>
            </table></td>
            <td>&nbsp;</td>
          </tr>
        </table></td>
      </tr>
    </table></td>
  </tr>
  <tr>
    <td bgcolor="#a2d962">&nbsp;</td>
  </tr>
</table>

<map name="Map"><area shape="rect" coords="3,3,36,19" onclick="Login()"><area shape="rect" coords="40,3,78,18" onclick="Reset()"></map></body>


</html>


